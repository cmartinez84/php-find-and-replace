<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Template</title>
  </head>
  <body>
    <div class="container">
      <h2>Find and Replace Game</h2>
      <form class="" action="/game" method="post">
        <div class="form-group">
          <label for="">Enter a sentence:</label>
          <input type="text" name="input_sentence" class="form-control">
        </div>
        <div class="form-group">
          <label for="">Replace:</label>
          <input type="text" name="input_search_string" class="form-control">
        </div>
        <div class="form-group">
          <label for="">Replace with:</label>
          <input type="text" name="input_replacement" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Go!</button>
      </form>

      <h2>Play game randomly!</h2>
      <form class="" action="/randomGame" method="post">
        <div class="form-group">
          <label for="">Enter a sentence:</label>
          <input type="text" name="input_sentence" class="form-control">
        </div>
        <div class="form-group">
          <label for="">Replace with:</label>
          <input type="text" name="input_replacement" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Go!</button>
      </form>

      <h2>Play Some Mad MadLibs!</h2>
      <form class="" action="/madlib" method="post">
        <div class="form-group">
          <label for="">Enter a sentence:</label>
          <input type="text" name="input_sentence" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Go!</button>
      </form>
    </div>
  </body>
</html>
